{
  "env": {
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript"
  ],
  "ignorePatterns": [
    "jest.config.ts"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ],
    "requireConfigFile": false,
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-import-assertions"
      ]
    }
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      0
    ]
  }
}